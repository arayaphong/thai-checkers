---
# Central clang-tidy configuration (curated subset for signal over noise)
Checks: >
  -*,
  bugprone-*,
  -bugprone-chained-comparison,
  misc-no-recursion,
  modernize-use-nullptr,
  modernize-use-override,
  readability-identifier-length,
  readability-magic-numbers

WarningsAsErrors: ''

HeaderFilterRegex: '^(src|include)/'
FormatStyle: none
ExtraArgs: ['-std=c++20', '-fopenmp']

CheckOptions:
  - key:             readability-identifier-length.MinimumLength
    value:           '3'
  - key:             readability-identifier-length.IgnoredIdentifiers
    value:           'i,j,k,x,y,z'
  - key:             readability-identifier-length.AllowedShortIdentifiers
    value:           'i;j;k;x;y;z'
  - key:             readability-magic-numbers.IgnoredIntegerValues
    value:           '0;1;2;-1'
  - key:             readability-magic-numbers.IgnorePowersOfTwoIntegerValues
    value:           '1'
  - key:             readability-magic-numbers.IgnoredFloatingPointValues
    value:           '0.0;1.0'
  - key:             readability-magic-numbers.IgnoredFilePatterns
    value:           'src/tests/.*'
...
